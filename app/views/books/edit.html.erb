<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1>Editing Book</h1>
        <% if @book.errors.any? %>
          <div class="error_explanation">
            <h3><%= @book.errors.count %> errors prohibited this book from being saved:</h3>
              <ul>
               <% @book.errors.full_messages.each do |message| %>
               <li><%= message %></li>
               <% end %>
              </ul>
          </div>
        <% end %>
      <%= form_for(@book) do |f| %>
      <div class="field row">
       <label>Title</label>
       <%= f.text_field :title, class: "col-xs-12 field"  %>
      </div>
      <div class="field row">
       <label>Opinion</label>
       <%= f.text_area :body, class: "col-xs-12 field" %>
      </div>
      <div class="action row">
       <%= f.submit "Update Book", class: "btn btn-primary col-xs-12" %>
      </div>
      <%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %>
      <% end %>
    </div>
  </div>
</div>