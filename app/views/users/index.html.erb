<div class="container">
  <p><%= flash[:notice_a] %></p>
  <div class="row">
    <!-- ここから -->
  	<div class="col-xs-3">
     <h2>User info</h2>
     <%= attachment_image_tag @user_info, :profile_image, :fill, 100,100, format: 'jpg', fallback: "no_image.jpg" %>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= @user_info.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user_info.introduction %></th>
          </tr>
        </tbody>
      </table>
    <div class="row">
      <%= link_to "", edit_user_path(current_user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
    </div>
    <h2>New book</h2>
      <%= form_for(@book) do |f| %>
      <div class="field row">
        <label class="book_title">Title</label>
          <%= f.text_field :title, class: "col-xs-12 book_title" %>
        </div>
      <div class="field row">
        <label class="book_opinion">Opinion</label>
          <%= f.text_area :body, class: "col-xs-12 book_body"%>
      </div>
      <div class="action row">
          <%= f.submit "Create Book", class: "col-xs-12 btn btn-primary" %>
      </div>
      <% end %>
    </div>
    <!-- ここまで -->
  	<div class="col-xs-9">
	  	<h2>Users</h2>
		  <table class="table">
			 <thead>
				<tr>
					<th>image</th>
					<th>name</th>
					<th colspan="3"></th>
				</tr>
			 </thead>
			 <tbody>
				<% @users.each do |user| %>
				<tr>
					<td><%= attachment_image_tag user, :profile_image, format: 'jpg', fallback: "no_image.jpg", size: '50x50' %></td>
					<td><%= user.name %></td>
					<td><%= link_to"Show", user_path(user.id) %></td>
				</tr>
				<% end %>
			 </tbody>
		  </table>
	  </div>
	</div>
</div>